<!DOCTYPE html>
<%- include('header'); -%>
<html lang="en">
  <body>
    <div class="box" id="heading">
      <h1><%=listTitile%></h1>
    </div>

    <div class="box">
      <% newListItem.forEach(item => { %>
      <form action="/delete" method="post">
        <div class="item">
          <input
            type="checkbox"
            name="checkedItem"
            onChange="this.form.submit()"
            value="<%= item._id%>"
          />

          <p><%= item.name %></p>
        </div>
        <input type="hidden" name="list_name" value="<%= listTitile %>" />
      </form>
      <% }) %>
    </div>

    <form action="/" method="post">
      <input type="text" name="newItem" autocomplete="off" />
      <button type="submit" name="List" value="<%=listTitile%>">+</button>
    </form>

    <%- include('footer'); -%>
  </body>
</html>
